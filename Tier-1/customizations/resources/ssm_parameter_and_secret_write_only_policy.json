{
  "Version": "2012-10-17",
  "Statement": [
      {
        "Effect": "Allow",
        "Sid": "AllowWriteToSecretManager",
        "Action": [
            "secretsmanager:CreateSecret",
            "secretsmanager:PutSecretValue",
            "secretsmanager:UpdateSecret",
            "secretsmanager:TagResource",
            "secretsmanager:DeleteSecret"
        ],
        "Resource": "*"
      },
      {
        "Sid": "AllowWriteToSSMParameter",
        "Effect": "Allow",
        "Action": [
          "ssm:PutParameter"
        ],
        "Resource": "*"
      }
  ]
}